<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Create New Item</h2>

                    @if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }
                    
                    <form id="createItemForm" action="/Item/CreateItem" method="post">
                        <div class="form-group">
                            <label for="Name">Name:</label>
                            <input type="text" class="form-control" id="Name" name="Name" required />
                        </div>
                        <div class="form-group">
                            <label for="Price">Price:</label>
                            <input type="text" class="form-control" id="Price" name="Price" required />
                        </div>
                        <div class="form-group">
                            <label for="PriceMode">Price Mode:</label>
                            <select class="form-control" id="PriceMode" name="PriceMode" required>
                                <option value="PerItem">Per Item</option>
                                <option value="PerKg">Per Kg</option>
                                <option value="PerLiter">Per Liter</option>
                            </select>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Create Item</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

